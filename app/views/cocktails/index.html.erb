<div class="card-columns">
  <% @cocktails.each do |cocktail|%>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1572590016064-3e6ae9c04947?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2743&q=80'); width: 18rem;">
          <!-- <img class="card-img-top" src="https://images.unsplash.com/photo-1572590016064-3e6ae9c04947?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2743&q=80" alt="Card image cap"> -->
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <div id="view-button">
            <%= link_to "View Cocktail", cocktail_path(cocktail), class: "btn btn-warning" %>
          </div>
        </div>
      </div>
  <% end %>
</div>


